{
  "name": "repo-contribution-count-action",
  "version": "1.0.0",
  "description": "一个用于统计用户在指定仓库中PR数量并生成图标的 GitHub Action。",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test:local": "node test-local/index.js",
    "test:quick": "node test-local/quick-test.js",
    "package": "pnpm run build",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lxKylin/repo-contribution-count-action.git"
  },
  "keywords": [
    "github-action",
    "pull-request",
    "statistics",
    "badge",
    "pr-count"
  ],
  "author": "Kylin <1159469891@qq.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^17.2.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  }
}
